@model Challenge.Models.AuthModel
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Auth/_Layout.cshtml";
    
}
    
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-b-160 p-t-50">
                <form class="login100-form validate-form" method="post" asp-action="Index" asp-controller="Auth">
                    @if (ViewBag.Message != null)
                    {
                        <script>Swal.fire('Kesalahan','@ViewBag.Message','error')</script>
                    }
                    <span class="login100-form-title p-b-43">
                        Selamat Datang
                    </span>
                    <div class="wrap-input100 rs1 validate-input" data-validate="Masukan Username">
                        <input class="input100" type="text" name="username">
                        <span class="label-input100">Username</span>
                    </div>

                    <div class="wrap-input100 rs2 validate-input" data-validate="Masukan Password">
                        <input class="input100" type="password" name="password">
                        <span class="label-input100">Password</span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Masuk
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>